<h1>Posts</h1>
    <% @posts.each do |post| %>
      <div class="">
        <ul class="list-inline">
          <li><%= image_tag post.user.icon %></li>
          <li><%= post.user.name %></li>
          <li><%= post.prefecture %></li>
          <!-- 離島ラベル -->
        </ul>

        <ul>
          <li><%= image_tag post.image %></li>
          <li><%= post.content %></li>
        </ul>

        <ul id="favorite-btn-<%= post.id %>">
          <%= render partial: 'favorites/favorite', locals: { post: post } %>
        </ul>
        <ul>
          <li><%= "コメント#{post.comments.count}件" %></li>
        </ul>

        <ul class="list-inline">
          <li><%= link_to t('view.comment'), post %></li>
          <li><%= link_to t('view.show'), post %></li>
        </ul>

        <% post.comments.each do |comment| %>
          <ul class="list-inline">
            <li><%= image_tag comment.user.icon %></li>
            <li><%= comment.content %></li>
          </ul>
        <% end %>
      </div>

    <% end %>
