<p id="notice"></p>
  <ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment" id ="this_comment_<%= comment.id %>"></div>
        <p><%= "#{comment.user.name}さん" %></p>
        <p><%= comment.content %></p>
        <br>
        <% if comment.user == current_user %>
          <span><%= link_to "コメント編集", edit_post_comment_path(post, comment), remote: true %></span>
          <span><%= link_to "コメント削除", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true,
                                          data: { confirm: "本当に削除しますか?"} %></span>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
<br>
