<div class="">
  <div class="container">
    <div>
      <h2><%= t('.sign_up') %></h2>
      <div class="user-account-session-form">
        <h3>離島マニア</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザーネーム" %>
          </div>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
            <% if @minimum_password_length %>
              <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %><br />
          </div>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
          </div>
          <div class="field">
            <%= f.label :icon %><br />
            <%= f.file_field :icon, autofocus: true, autocomplete: "icon" %>
          </div>
          <div class="field">
            <%= f.label :island_ids, 'お気に入りの島' %><br />
            <%= f.collection_check_boxes(:island_ids, Island.all, :id, :name) %>
          </div>
          <div class="actions">
            <%= f.submit t('.sign_up') %>
          </div>
        <% end %>
      </div>
      <%= link_to t('view.back'), tops_index_path %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
