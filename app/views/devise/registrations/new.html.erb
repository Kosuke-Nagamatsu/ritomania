<div class="background-box">
  <div class="container flexbox-center">
    <div>
      <h2 class= "account-session-header text-center"><%= t('.sign_up') %></h2>
      <div class="form-group account-session-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: t('view.user_name_sample'), class: "form-control input-field" %>
          </div>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('view.email_sample'), class: "form-control input-field" %>
          </div>
          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: t('view.password'), class: "form-control input-field" %>
            <% if @minimum_password_length %>
              <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %><br />
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('view.password_confirmation'), class: "form-control input-field" %>
          </div><br>
          <div class="field">
            <%= f.label :icon %><br />
            <%= f.file_field :icon, autofocus: true, autocomplete: "icon" %>
          </div>
          <div class="field">
            <%= f.label :island_ids, '好きな離島はどこですか？' %><br />
            <%= f.collection_check_boxes(:island_ids, Island.all, :id, :name) %>
          </div><br>
          <div class="actions flexbox-center">
            <%= f.submit t('.sign_up'), class: "btn btn-default btn-custom" %>
          </div>
        <% end %>
      </div>
      <ul class="flexbox-space-around">
        <li><%= link_to t('view.back'), root_path, class: "btn btn-default btn-custom" %></li>
        <li><%= render "devise/shared/links" %></li>
      </ul>
    </div>
  </div>
</div>
