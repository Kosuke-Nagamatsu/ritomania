<h1>お気に入り一覧</h1>
<div class="container">
  <div class="favorite-contents flexbox-space-around-wrap">
    <% @favorites.each do |favorite| %>
      <ul id="favorite-btn-<%= favorite.post.id %>" class="list-group favorite-content">
        <li class="list-group-item">
          <%= link_to favorite.post.image, "data-lightbox": "favorite-image" do %>
           <%= image_tag favorite.post.image.variant(gravity: 'Center', resize: '300x400').processed, class:'main-image' if favorite.post.image.attached? %>
          <% end %>
        </li>
        <li class="list-group-item">
          <%= render partial: 'favorites/favorite', locals: { post: favorite.post } %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
